<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <StatDef>
        <defName>AS_MortarDamageFactor</defName>
        <label>mortar damage factor</label>
        <description>A multiplier applied to damage caused by mortaring by this pawn.</description>
        <category>PawnCombat</category>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
		 <hideAtValue>1</hideAtValue>
        <toStringStyle>PercentOne</toStringStyle>
        <toStringStyleUnfinalized>PercentTwo</toStringStyleUnfinalized>
    </StatDef>
	
	<StatDef>
		<defName>AS_CraftingYield</defName>
		<label>crafting yield</label>
		<description>A multiplier to the yield produced in non-artistic crafting operations.</description>
		<category>PawnWork</category>
		<defaultBaseValue>1</defaultBaseValue>
		<hideAtValue>1</hideAtValue>
		<minValue>0</minValue>
		<toStringStyle>PercentZero</toStringStyle>
		<displayPriorityInCategory>10000</displayPriorityInCategory>
		<showDevelopmentalStageFilter>Adult</showDevelopmentalStageFilter>
	</StatDef>
	
	
	 <StatDef>
       <defName>AS_ExtraGoldYield</defName>
		<label>extra gold yield</label>
        <description>A bonus to the chance of finding extra gold nuggets when mining any rocks.</description>
        <category>PawnWork</category>
        <defaultBaseValue>0</defaultBaseValue>
        <minValue>0</minValue>
        <hideAtValue>0</hideAtValue>
        <toStringStyle>PercentOne</toStringStyle>
        <toStringStyleUnfinalized>PercentTwo</toStringStyleUnfinalized>
        <disableIfSkillDisabled>Mining</disableIfSkillDisabled>
    </StatDef>
	 <StatDef>
       <defName>AS_ExtraComponentsYield</defName>
		<label>extra components yield</label>
        <description>A bonus to the chance of finding extra components when mining any rocks.</description>
        <category>PawnWork</category>
        <defaultBaseValue>0</defaultBaseValue>
        <minValue>0</minValue>
        <hideAtValue>0</hideAtValue>
        <toStringStyle>PercentOne</toStringStyle>
        <toStringStyleUnfinalized>PercentTwo</toStringStyleUnfinalized>
        <disableIfSkillDisabled>Mining</disableIfSkillDisabled>
    </StatDef>
	<StatDef>
       <defName>AS_FireStarter</defName>
		<label>fire starter</label>
        <description>A bonus to the chance of setting a melee target on fire.</description>
        <category>PawnCombat</category>
        <defaultBaseValue>0</defaultBaseValue>
        <minValue>0</minValue>
        <hideAtValue>0</hideAtValue>
        <toStringStyle>PercentOne</toStringStyle>
        <toStringStyleUnfinalized>PercentTwo</toStringStyleUnfinalized>
        <disableIfSkillDisabled>Melee</disableIfSkillDisabled>
    </StatDef>
    
</Defs>